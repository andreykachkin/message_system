<!doctype html>
<html lang="ru" ng-app="app">
<head>
    <meta charset="UTF-8">
    <title>Регистрация</title>

    <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" href="/img/favicon.png">

    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/bower_components/angular/angular.js"></script>
    <script src="/bower_components/angular-resource/angular-resource.js"></script>
    <script src="/js/reg.controller.js"></script>
    <script src="/js/firstLevel.factory.js"></script>

</head>
<body ng-controller="RegistrationController">
    <div class="container" style="padding-top: 200px">
        <div class="row">
            <form class="form-horizontal" ng-submit="reg()" role="form">
                <h2 class="text-center">Регистрация</h2>
                <div class="form-group">
                    <label class="col-md-5 control-label">Логин</label>
                    <div class="col-md-3">
                        <input type="text" class="form-control" ng-model="username" required placeholder="Логин">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-5 control-label">Пароль</label>
                    <div class="col-md-3">
                        <input type="password" class="form-control" required ng-model="password" placeholder="Пароль">
                    </div>
                </div>
                <div class="form-group" style="margin-bottom: 0px">
                    <div class="col-md-5"></div>
                    <div class="col-md-3" >
                        <p class="text-danger" ng-show="error">Пользователь с таким именем уже существует.</p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-5 col-md-2">
                        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>