<div>
    <h4><b>От кого: </b>{{message.sender}}</h4>
    <h4><b>Кому: </b>{{message.addressee}}</h4>
    <h4><b>Дата: </b>{{message.date | date: dd.MM.yyyy}}</h4>
    <p>{{message.text}}</p>

    <button class="btn btn-default" ng-click="answer = !answer" style="margin-right: 15px">Ответить</button>
    <a href="/messages/history/{{message.sender}}+{{message.addressee}}" class="btn btn-default">
        <i class="fa fa-users"> </i>
        Показать историю переписки
    </a>

    <form ng-submit="sendMessage()" ng-show="answer">
        <textarea name="" id="" rows="15" ng-model="text" class="form-control" style="resize: none; margin-top: 15px; margin-bottom: 15px" placeholder="Введите сообщение"></textarea>
        <button class="btn btn-default" type="submit"> Отправить сообщение</button>
    </form>
</div>