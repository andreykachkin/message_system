<h1 class="page-header">Отправленные</h1>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th></th>
            <th>Адресат</th>
            <th>Текст сообщения</th>
            <th>Дата</th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="message in messages | orderBy : sortDate">
            <td>
                <a href="/messages/{{message._id}}" class="btn btn-default" >
                    <i class="fa fa-envelope-o" title="Прочитать сообщение"></i>
                </a>
            </td>
            <td>{{message.addressee}}</td>
            <td style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis; max-width: 300px;">{{message.text}}</td>
            <td>{{message.date | date: dd.MM.yyyy}}</td>
        </tr>
        </tbody>
    </table>
</div>